<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="gameViewModel"
            type="husaynhakeem.io.tictactoe_mvvm.viewmodel.GameViewModel" />
    </data>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/CellTextView"
            android:text="@{gameViewModel.game.cells[0][0]}"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/CellTextView"
            android:text="@{gameViewModel.game.cells[0][1]}"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/CellTextView"
            android:text="@{gameViewModel.game.cells[0][2].value}"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/CellTextView"
            android:text="@{gameViewModel.game.cells[1][0].value}"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/CellTextView"
            android:text="@{gameViewModel.game.cells[1][1].value}"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/CellTextView"
            android:text="@{gameViewModel.game.cells[1][2].value}"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/CellTextView"
            android:text="@{gameViewModel.game.cells[2][0].value}"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/CellTextView"
            android:text="@{gameViewModel.game.cells[2][1].value}"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <TextView
            style="@style/CellTextView"
            android:text="@{gameViewModel.game.cells[2][2].value}"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>

</layout>